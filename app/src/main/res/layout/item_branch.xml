<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/pizza_cheese_light"
    app:strokeWidth="1dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with name and status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtBranchName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Branch Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/pizza_dark_crust"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Status indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgStatusIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_circle_green"
                    android:contentDescription="Branch status" />

                <TextView
                    android:id="@+id/txtBranchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location_pin"
                android:contentDescription="Address"
                android:layout_marginEnd="8dp"
                app:tint="@color/pizza_pepperoni_red" />

            <TextView
                android:id="@+id/txtBranchAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Branch Address"
                android:textSize="14sp"
                android:textColor="@color/pizza_medium_crust"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Working Hours -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:contentDescription="Working hours"
                android:layout_marginEnd="8dp"
                app:tint="@color/pizza_cheese_gold" />

            <TextView
                android:id="@+id/txtWorkingHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ 10:00 AM - 11:00 PM"
                android:textSize="13sp"
                android:textColor="@color/pizza_cheese_gold" />

        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_phone"
                android:contentDescription="Phone"
                android:layout_marginEnd="8dp"
                app:tint="@color/pizza_sauce_red" />

            <TextView
                android:id="@+id/txtBranchPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📞 0771234567"
                android:textColor="@color/pizza_sauce_red"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Call Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/pizza_sauce_red">

                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Call branch"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Directions Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/pizza_cheese_gold">

                <ImageView
                    android:id="@+id/btnDirections"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_directions"
                    android:contentDescription="Get directions"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>