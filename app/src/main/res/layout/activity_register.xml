<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/pizza_background">

    <!-- Pizza Logo Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Pizza Mania Family"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Input Fields Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/rounded_corner_background"
        android:elevation="8dp"
        android:layout_marginBottom="24dp">

        <!-- Name Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your full name"
            android:background="@drawable/edittext_pizza_background"
            android:textColor="@color/pizza_cheese_gold"
            android:textColorHint="@color/pizza_cheese_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp" />

        <!-- Email Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your.email@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_pizza_background"
            android:textColor="@color/pizza_cheese_gold"
            android:textColorHint="@color/pizza_cheese_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="8dp" />

        <!-- Password Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Create a secure password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_pizza_background"
            android:textColor="@color/pizza_cheese_gold"
            android:textColorHint="@color/pizza_cheese_light"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            app:backgroundTint="@color/pizza_pepperoni_red"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingVertical="16dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pizza_cheese_light"
            android:alpha="0.3"
            android:layout_marginVertical="8dp" />

        <!-- Login Redirect -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_go_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Now"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/pizza_cheese_gold"
            app:strokeWidth="1dp"
            android:textColor="@color/pizza_cheese_gold"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            app:cornerRadius="8dp" />
    </LinearLayout>
</LinearLayout>