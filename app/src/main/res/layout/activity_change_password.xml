<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/pizza_background">

    <!-- Pizza Logo Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure your account"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Input Fields Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/rounded_corner_background"
        android:elevation="8dp"
        android:layout_marginBottom="24dp">

        <!-- Old Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Password"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your current password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_pizza_background"
            android:textColor="@color/pizza_cheese_gold"
            android:textColorHint="@color/pizza_cheese_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp" />

        <!-- New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your new password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_pizza_background"
            android:textColor="@color/pizza_cheese_gold"
            android:textColorHint="@color/pizza_cheese_light"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="@color/pizza_pepperoni_red"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm your new password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_pizza_background"
            android:textColor="@color/pizza_cheese_gold"
            android:textColorHint="@color/pizza_cheese_light"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save New Password"
            style="@style/Widget.Material3.Button.TonalButton"
            app:backgroundTint="@color/pizza_pepperoni_red"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="16dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Back to Login -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textColor="@color/pizza_cheese_gold"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>