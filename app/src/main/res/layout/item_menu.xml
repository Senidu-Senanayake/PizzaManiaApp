<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/pizza_dough_light"
    app:strokeWidth="1dp">

    <!-- Main Row Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Image Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/pizza_dough_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_gradient_overlay"
                android:contentDescription="Menu Item Image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pizza_logo" />

            <!-- Availability indicator -->
            <View
                android:id="@+id/availability_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:layout_margin="6dp"
                android:background="@drawable/availability_dot"
                android:visibility="visible" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Item Name with Category Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Margherita Pizza"
                    android:textColor="@color/pizza_dark_crust"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Category Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/pizza_pepperoni_red"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="PIZZA"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text="Fresh tomatoes, mozzarella cheese, and basil leaves"
                android:textColor="@color/pizza_sauce_orange"
                android:textSize="14sp" />

            <!-- Price and Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rs. 1,500"
                    android:textColor="@color/pizza_pepperoni_red"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Star Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="Rating"
                        android:src="@drawable/ic_star"
                        app:tint="@color/pizza_cheese_gold" />

                    <TextView
                        android:id="@+id/txt_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="4.5"
                        android:textColor="@color/pizza_cheese_gold"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Quantity Controls (initially hidden) -->
            <LinearLayout
                android:id="@+id/quantity_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_increase"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/pizza_pepperoni_red"
                    app:cornerRadius="8dp" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="1"
                    android:textColor="@color/pizza_dark_crust"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decrease"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="âˆ’"
                    android:textColor="@color/pizza_pepperoni_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/pizza_pepperoni_red" />

            </LinearLayout>

            <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="16dp"
                android:text="ADD"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/pizza_pepperoni_red"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_add"
                app:iconSize="16dp"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Unavailable Overlay -->
    <LinearLayout
        android:id="@+id/unavailable_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/unavailable_overlay"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently Unavailable"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/unavailable_badge"
            android:padding="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
