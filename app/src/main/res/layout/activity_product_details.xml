<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/pizza_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:textColor="@color/pizza_pepperoni_red"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customize your pizza just the way you like it"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Product Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_background"
            android:elevation="8dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pizza_logo"
                android:layout_marginBottom="12dp" />

            <!-- Name -->
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/pizza_cheese_gold"
                android:layout_marginBottom="6dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delicious pizza description"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1200"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/pizza_pepperoni_red"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Size Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Size:"
            android:textStyle="bold"
            android:textColor="@color/pizza_cheese_gold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radio_group_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radio_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:checked="true"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:textColor="@color/white" />
        </RadioGroup>

        <!-- Toppings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Toppings:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/pizza_cheese_gold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkbox_cheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Cheese (+Rs.200)"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/checkbox_olives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olives (+Rs.150)"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/checkbox_mushrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mushrooms (+Rs.180)"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Quantity Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

        <!-- Decrease Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_decrease"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âˆ’"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/pizza_pepperoni_red"
            app:strokeWidth="2dp"
            android:textColor="@color/pizza_pepperoni_red"
            android:backgroundTint="@android:color/transparent" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp" />

        <!-- Increase Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_increase"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/pizza_pepperoni_red"
            app:strokeWidth="2dp"
            android:textColor="@color/pizza_pepperoni_red"
            android:backgroundTint="@android:color/transparent" />

    </LinearLayout>


    <!-- Add to Cart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="14dp"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/pizza_pepperoni_red"
            android:textColor="@color/white"
            app:icon="@drawable/ic_cart"
            app:iconTint="@color/white"
            app:iconGravity="start"/>
    </LinearLayout>
</ScrollView>
